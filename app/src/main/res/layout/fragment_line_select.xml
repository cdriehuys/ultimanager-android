<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ultimanager.ui.LineSelectFragment">
    <LinearLayout
        android:id="@+id/line_select_header"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/select_line"
            android:textColor="@color/colorTextDark"
            android:textSize="24sp"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_line_select"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintBottom_toTopOf="@+id/line_select_footer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_select_header"/>

    <LinearLayout
        android:id="@+id/line_select_footer"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" >
        <Button
            android:id="@+id/btn_select_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select 7"
            />

        <Button
            android:enabled="false"
            android:id="@+id/btn_select_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/use_line"/>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>
